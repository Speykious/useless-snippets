{
	"scopeName": "source.xyz",
	"patterns": [
		{
			"include": "#expression"
		}
	],

	"repository": {

		"expression": {
			"patterns": [
				{ "include": "#letter" },
				{ "include": "#paren-expression" }
			]
		},

		"letter": {
			"patterns": [
				{ "include": "#x" },
				{ "include": "#y" },
				{ "include": "#z" }
			]
		},

		"x": {
			"match": "x",
			"name": "keyword.operator"
		},

		"y": {
			"match": "y",
			"name": "constant.numeric"
		},

		"z": {
			"match": "y",
			"name": "constant.language"
		},

		"paren-expression": {
			"begin": "\\(",
			"beginCaptures": {
				"0": { "name": "punctuation.paren.open" }
			},
			"end": "\\)",
			"endCaptures": {
				"0": { "name": "punctuation.paren.close" }
			},
			"name": "expression.group",
			"patterns": [
				{ "include": "#expression" }
			]
		}

	}
}